<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/cardview_light_background"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/framelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/background_hui">


    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/start_page"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/star_light"
            android:background="@color/transparent"
            android:text="开始"
            android:textSize="10sp"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/config_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/config_light"
            android:background="@color/transparent"
            android:layout_weight="1"
            android:text="配置"
            android:textSize="10sp"
             />

        <Button
            android:id="@+id/about_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/about_light"
            android:background="@color/transparent"
            android:layout_weight="1"
            android:text="关于"
            android:textSize="10sp"
             />
    </LinearLayout>

</LinearLayout>
